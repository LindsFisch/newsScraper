<div class="container">
    <h1>Your Saved News</h1>
    {{#if article}} {{#each article}}
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">{{this.title}}</h4>
            <p><a href="{{this.link}}" target="_blank">See Full Article</a></p>
            <a href="/delete/{{this.id}}" class="btn btn-primary">Delete</a>
            <a href="/save/{{this.id}}" class=="btn btn-primary">Add Comment</a>
        </div>
    </div>
    {{/each}}{{else}}
    <div class="alert alert-danger" role="alert">
        <strong>Oh snap!</strong> You haven't saved any articles yet!
    </div>
    {{/if}}
</div>